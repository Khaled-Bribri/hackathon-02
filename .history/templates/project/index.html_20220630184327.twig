{% extends 'base.html.twig' %}

{% block title %}Project index
{% endblock %}

{% block body %}
	<h1 class="d-flex justify-content-center">My Project</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>CreatedOn</th>
				<th>Status</th>
				<th>Deadline</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for project in projects %}
				<tr>
					<td>{{ project.id }}</td>
					<td>{{ project.title }}</td>
					<td>{{ project.createdOn ? project.createdOn|date('Y-m-d') : '' }}</td>
					<td>{{ project.status }}</td>
					<td>{{ project.deadline ? project.deadline|date('Y-m-d') : '' }}</td>
					<td>
						<a class="btn btn-outline-warning" href="{{ path('app_project_show', {'id': project.id}) }}">show</a>
						<a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_project_new') }}">Create new</a>
{% endblock %}
