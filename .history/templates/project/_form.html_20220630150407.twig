{% extends "base.html.twig" %}

{% block title %}
	Create a new project
{% endblock %}
{% block body %}
	{{ form_start(form) }}
	<div class="container contact-form">
		<form method="POST">
			<div class="m-4 mw-50 d-flex"></div>
			<div class="row gap-4">
				<div class="col-md-5">
					{{ form_widget(form.lastname) }}
				</div>
				<div class="col-md-5">
					{{ form_widget(form.firstname) }}
				</div>
				<div class="col-md-5 ">
					{{ form_widget(form.email) }}
				</div>
				<div class="col-md-5">
					{{ form_widget(form.roles) }}
				</div>
				<h4>Application</h4>
				{{ form_widget(form.application) }}
				<h4>Restaurant</h4>
				{{ form_widget(form.restaurant) }}
				&nbsp; &#160;
				<button class="btn btn-dark w-25 mx-auto mt-5">{{ button_label|default('Ajouter') }}</button><br><br>

			</div>
			<br><a class="btn btn-outline-dark " href="{{ path('app_user_index') }}">Retour Ã  la liste des collaborateurs</a><br><br>
		</div>
		{{ form_rest(form) }}</form>
</div>
{{ form_end(form) }}{% endblock %}{% block script %}
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>{% endblock %}
