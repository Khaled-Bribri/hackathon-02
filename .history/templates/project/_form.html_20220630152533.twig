{% extends "base.html.twig" %}

{% block title %}{% endblock %}
{% block body %}
	<h1>
		Create a new project</h1>

	<div class="container contact-form d-flex">

		<form method="POST">{{ form_start(form) }}
			<div class="m-4 mw-50 ">
				<div class="row gap-4">
					<div class="col-md-5">Title
						{{ form_widget(form.title) }}
					</div>
					<div class="col-md-5">Status
						{{ form_widget(form.status) }}
					</div>


				</div>
			</div>
			{{ form_rest(form) }}
			{{ form_end(form) }}</form>
	</div>

	<button class="btn btn-light w-25  mt-5 d-flex">{{ button_label|default('Ajouter') }}</button><br><br>
{% endblock %}
