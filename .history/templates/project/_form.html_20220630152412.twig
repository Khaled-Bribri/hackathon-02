{% extends "base.html.twig" %}

{% block title %}
	Create a new project
{% endblock %}
{% block body %}

	<div class="container contact-form d-flex">

		<form method="POST">{{ form_start(form) }}
			<div class="m-4 mw-50 ">
				<div class="row gap-4">
					<div class="col-md-5">Title
						{{ form_widget(form.title) }}
					</div>
					<div class="col-md-5">Status
						{{ form_widget(form.status) }}
					</div>


				</div>
			</div>
			{{ form_rest(form) }}
			{{ form_end(form) }}</form>
	</div>
	{{ form_end(form) }}
	<button class="btn btn-light w-25  mt-5">{{ button_label|default('Ajouter') }}</button><br><br>
{% endblock %}
