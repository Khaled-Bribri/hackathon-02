{% extends "base.html.twig" %}

{% block body %}


	<section class="get-in-touch">
		<h1 class="title">Create new Project</h1>


		<form class="contact-form row" method="POST" action="/form">
			<div class="form-field col-lg-6">
				<input class="input-text js-input" type="text" name="nom" value="{{} project.title }}">
				<label class="label" for="Nom">Nom</label>
			</div>
			<div class="form-field col-lg-6">
				<input class="input-text js-input" type="text" name="prenom" value="">
				<label class="label" for="Prénom">Prénom</label>
			</div>
			<div class="form-field col-lg-6 ">
				<input class="input-text js-input" type="text" name="adresse" value="">
				<label class="label" for="Adresse">Adresse</label>
			</div>
			<div class="form-field col-lg-6 ">
				<input class="input-text js-input" type="text" name="postal" value="">
				<label class="label" for="Postal">Code Postal</label>
			</div>
			<div class="form-field col-lg-6 ">
				<input class="input-text js-input" type="text" name="ville" value="">
				<label class="label" for="ville">Ville</label>
			</div>
			<div class="form-field col-lg-6 ">
				<input class="input-text js-input" type="email" name="email" value="">
				<label class="label" for="email">E-mail</label>
			</div>

			<div class="form-field col-lg-6 ">
				<input class="input-text js-input" type="text" name="telephone" value="">
				<label class="label" for="phone">Téléphone</label>
			</div>

			<div class="form-field col-lg-12">
				<input class="input-text js-input" type="text" name="message" value="">
				<label class="label" for="message">Message</label>
			</div>
			<div class="form-field col-lg-12">
				<input class="submit-btn" type="submit" value="Envoyer">

			</div>
		</form>
	</section>

{% endblock %}
